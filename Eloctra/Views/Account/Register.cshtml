@model Eloctra.Data.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<div class="container card">

<div class="row">
    <div class=".col-md-12" style="padding-left:40%">
        <form method="post" asp-controller="account" asp-action="register">
            <div asp-validation-summary="All" class="text-danger">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" style="min-width:50px"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" style="min-width:50px"/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" style="min-width:50px"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mobile"></label>
                    <input asp-for="Mobile" class="form-control" style="min-width:50px"/>
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" style="min-width:50px"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" style="min-width:50px"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <textarea asp-for="Address" class="form-control" style="min-width:50px"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>

    </div>
</div>
</div>

